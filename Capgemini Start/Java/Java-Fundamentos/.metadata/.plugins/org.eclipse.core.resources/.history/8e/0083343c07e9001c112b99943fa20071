
public class LacoRepeticao {

	public static void main(String[] args) {
		// Comando WHILE
		
		int qtdVezes = 1;
		
		while (qtdVezes <=10) {
			System.out.println("Estou fazendo a " + qtdVezes + "ª vez");
			qtdVezes++; //qtdVezes = qtdVezes + 1
		}
		System.out.println("Saí do laço e executei " + (qtdVezes-1) + " vezes");

	}

}
