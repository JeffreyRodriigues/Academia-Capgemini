
public class ComandoCondicional {

	public static void main(String[] args) {
		// IF
		
		int num1 = 10, num2 = 30;
			if (num1 < num2) {
				System.out.println("if normal - Número 1 é menor que Número 2");
			}
			
			if (num1 > num2) {
				System.out.println("if com else - Número 1 é maior");
			} else {
				System.out.println("if com else - Número 1 é menor que o Número 2");
			}
			

			if (num1 > num2) {
				System.out.println("Condição composta 1 - Número 1 é maior");
			} else if (num1 < num2) {
				System.out.println("Condição composta 1 - Número 1 é menor");
			} else {
				System.out.println("Condição composta 1 - Número 1 é igual");
			}
			
			//Condição composta - situação num1 = num2
			num1 = 10;
			num2 = 10;
			if (num1 > num2) {
				System.out.println("Condição composta 2 - Número 1 é maior");
			} else if (num1 < num2) {
				System.out.println("Condição composta 2 - Número 1 é menor");
			} else {
				System.out.println("Condição composta 2 - Número 1 é igual");
			}
			
			//Comando condicional SWITCH
			char opcao = 1;
			
			switch (opcao) {
				case 1: {
					System.out.println("Chame programa de inclusão");
					break;
					}
				case 2: {
					System.out.println("Chame programa de alteração");
					break;
					}
				case '3': {
					System.out.println("Chame programa de exclusão");
					break;
					}
				case '4': {
					System.out.println("Chame programa de consulta");
					break;
					}
			}
	}

}
