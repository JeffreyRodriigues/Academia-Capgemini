import java.util.LinkedList;

public class LinkedListCarros {

	public static void main(String[] args) {
		/*
		 addFirst()
		 addLast()
		 removeFirst()
		 removeLast()
		 getFirst()
		 getLast()
		 */
		LinkedList<String> cars = new LinkedList<String>();
		cars.add("VOLVO");
		cars.add("BMW");
		cars.add("FORD");
		System.out.println(cars);
		System.out.println("Mostrando toda lista inicial");
		System.out.println("");
		
		//incluindo mazda no início
		cars.addFirst("MAZDA");
		System.out.println(cars);
		System.out.println("Incluindo Mazda no início");
		System.out.println("");
		
		//incluindo Bugatti no fim
		cars.addLast("BUGATTI");
		System.out.println(cars);
		System.out.println("Incluindo Bugatti no fim");
		System.out.println("");
		String carro;
		carro = cars.get(3);
		System.out.println(carro);
		System.out.println("Mostrando carro da terceira posição");
		System.out.println("");
		
		//removendo primeiro
		cars.removeFirst();
		System.out.println(cars);
		System.out.println("Removendo primeiro carro da lista");
		System.out.println("");
		
		//pega o primeiro
		System.out.println(cars.getFirst());
		System.out.println("Mostrando primeiro carro da lista");
		System.out.println("");
		
		//pega o ultimo
		System.out.println(cars.getLast());
		System.out.println("Mostrando último carro da lista");
		System.out.println("");
		
		//removendo o último
		cars.removeLast();
		System.out.println(cars);
		System.out.println("Removendo último carro da lista");
		System.out.println("");
	}

}
